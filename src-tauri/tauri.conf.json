{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Config Manager",
  "version": "1.0.0",
  "identifier": "com.claude.config-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Claude Config Manager",
        "width": 420,
        "height": 500,
        "resizable": true,
        "minWidth": 360,
        "minHeight": 400,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
